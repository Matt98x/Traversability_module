<?xml version="1.0"?>
<launch>
  <arg name="node_start_delay" default="30.0" /> 
  
  <!--ROBOT LAUNCHER -->
	<include file="$(find unitree_gazebo)/launch/General.launch"/>
  
 <!-- LAUNCHING THE FLOW REGULATOR -->
  <node name="cloud_handler" pkg="traversability_mesh_package" type="cloud_handler" launch-prefix="bash -c 'sleep 30; $0 $@' "/>
	
  <!-- LAUNCHING THE MESH RECONSTRUCTION -->
  <node name="lvr" pkg="lvr_ros" type="lvr_ros_reconstruction" respawn="true" args="-d $(find unitree_gazebo)/rviz/interface.rviz" launch-prefix="bash -c 'sleep 20; $0 $@' "/>

  <!-- LAUNCHING THE FLOW REGULATOR -->
  <node name="flow" pkg="traversability_mesh_package" type="flow_regulator" launch-prefix="bash -c 'sleep 30; $0 $@' "/>

  <!-- LAUNCHING THE GEOMETRY FEATURES EXTRACTOR -->
  <node name="geometry_extractor" pkg="traversability_mesh_package" type="geometry_extractor" launch-prefix="bash -c 'sleep 40; $0 $@' "/>


</launch>
